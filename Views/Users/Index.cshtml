@model IEnumerable<LinguaPlatform.Models.User>

@Html.AntiForgeryToken()

@{
    ViewBag.Title = "List of users";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<a asp-action="Create">Add new user</a>
<p></p>
<table class="table">
    <tr><th>Email</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit login</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
