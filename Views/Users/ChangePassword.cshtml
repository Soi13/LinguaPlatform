@model LinguaPlatform.Models.ChangePassword

@Html.AntiForgeryToken()

@{
    ViewBag.Title = "Change password";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<h2>Change user's password for @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-dark" />
    </div>
</form>